#include <iostream>
//Inserting a node at the tail
//node: data, ptr to the next node

using namespace std;

class node{
    public:
    int data;
    node* next;
    
    node(int val){
        data = val;
        next = NULL;
    }
    
};

void insertAtTail(node* &head, int val){ //traversal will be from head
    node* n = new node(val);
    
    if(head == NULL){
        head = n;
        return;
    }
    
    node* temp = head; //iterator
    while(temp->next != NULL){
        temp = temp->next;
    }
    temp->next = n;
}

node* reverse(node* &head){
    
}

//display
void display(node* head){//by value
    node* temp = head; //iterator again
    while(temp!=NULL){
        cout<<temp->data<<"->"; //printing temp ka data
        temp = temp->next;
    }
    cout<<"NULL"<<endl;
}

int main()
{
    node* head = NULL;//empty ll
    insertAtTail(head, 1);
    insertAtTail(head, 2);
    insertAtTail(head, 3);
    insertAtTail(head, 4);
    display(head);
  
    node* newhead = reverse(head);
    display(newhead);
    

    return 0;
}
